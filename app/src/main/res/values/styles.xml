<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/verge_colorPrimary</item>
        <item name="colorPrimaryDark">@color/verge_colorPrimaryDark</item>
        <item name="colorAccent">@color/verge_colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenir_next_demibold</item>
    </style>

    <style name="graphtextview">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/verge_colorAccent</item>
    </style>

    <style name="tor_settings_obfuscate" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/verge_colorPrimary</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/verge_colorBackground</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/verge_colorAccent</item>
    </style>

</resources>
