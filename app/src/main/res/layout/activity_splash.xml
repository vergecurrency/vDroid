<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_welcome_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fl_welcome_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fl_welcome_verge_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="90dp"
            android:paddingTop="80dp"
            android:paddingRight="90dp"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_verge_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splash_title"
            android:textAlignment="center"
            android:textColor="?vg_whiteGeneral"
            android:textSize="28sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splash_alpha_notice"
            android:textAlignment="center"
            android:textColor="?vg_whiteGeneral"
            android:padding="20dp"
            android:textSize="20sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/launch_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="60dp"
            android:text="@string/splash_slogan"
            android:textAlignment="center"
            android:textColor="?vg_whiteGeneral"
            android:textSize="@dimen/text_title_size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_launch_tor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:text="@string/splash_sub"
            android:textAlignment="center"
            android:textColor="?vg_whiteGeneral"
            android:textSize="@dimen/text_regular_size" />

    </RelativeLayout>


</RelativeLayout>