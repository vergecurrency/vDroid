<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item">

    <LinearLayout

        android:id="@+id/listview_currency_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@android:color/white"
        android:clickable="true"
        android:fadingEdge="none"
        android:focusable="true"
        android:orientation="vertical"
        tools:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listview_currency_symbol"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="false"
                android:fontFamily="@font/avenir_next_bold"
                android:gravity="center"
                android:text="CHF"
                android:textAlignment="center"
                android:textColor="@color/verge_colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listview_currency_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="false"
                    android:text="AUD"
                    android:textAlignment="viewStart"
                    android:textColor="@color/verge_colorPrimaryDark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/listview_currency_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="false"
                    android:text="Australian Dollar"
                    android:textAlignment="textStart"
                    android:textColor="@color/verge_colorPrimaryDark"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>