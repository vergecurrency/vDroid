<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_first_launch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fl_welcome_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fl_welcome_verge_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="90dp"
            android:paddingTop="80dp"
            android:paddingRight="90dp"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_verge_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_label"
            android:textAlignment="center"
            android:textColor="?vg_backgroundBlue"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/error_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/prog_placeholder"
            android:textAlignment="center"
            android:textColor="?vg_backgroundBlue"
            android:textSize="@dimen/text_smaller_size" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/first_launch_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_create_wallet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:backgroundTint="?vg_primaryLight"
                android:scaleType="fitCenter"
                android:text="@string/prog_placeholder"
                android:textColor="?vg_backgroundBlue" />

            <Button
                android:id="@+id/button_restore_wallet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="?vg_backgroundBlue"
                android:text="@string/prog_placeholder"
                android:textColor="?vg_primaryDark" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>