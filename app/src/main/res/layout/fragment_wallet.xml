<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?vg_backgroundGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?vg_primaryLight"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView

            android:id="@+id/wallet_card_verge_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fragment_title_paddingTop"
            android:text="200.00 XVG"
            android:textColor="?attr/vg_whiteGeneral"
            android:textSize="@dimen/text_balance_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_view_balance_label"
            android:textColor="?vg_whiteGeneral"
            android:textSize="@dimen/text_smaller_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="36dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/wallet_card_fiat_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?vg_whiteGeneral"
                    android:textSize="@dimen/text_subtitle_size" />

                <TextView
                    android:id="@+id/wallet_card_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?vg_whiteGeneral"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="40dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/wallet_card_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?vg_whiteGeneral"
                    android:textSize="@dimen/text_subtitle_size" />

                <TextView
                    android:id="@+id/wallet_card_change_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?vg_whiteGeneral"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/wallet_cards_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/form_rounded_white_rect"
        android:fillViewport="true"
        android:padding="2dp" />

</LinearLayout>



