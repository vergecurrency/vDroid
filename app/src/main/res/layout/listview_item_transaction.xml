<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_transaction_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?vg_backgroundGrey"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/listview_transaction_item"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="?vg_backgroundGrey"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/listview_transaction_item_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:backgroundTint="?vg_backgroundGrey"
            android:padding="5dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:backgroundTint="?vg_backgroundGrey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_transaction_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?vg_backgroundGrey"
                android:gravity="center_vertical"
                android:textColor="?vg_primaryDark"
                android:textSize="@dimen/text_smaller_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_transaction_item_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?vg_backgroundGrey"
                android:gravity="bottom"
                android:textColor="?vg_primaryDark"
                android:textSize="@dimen/text_smallest_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/listview_transaction_item_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:backgroundTint="?vg_backgroundGrey"
            android:gravity="end"
            android:paddingRight="8dp"
            android:textAlignment="viewEnd"
            android:textColor="?vg_primaryDark"
            android:textSize="@dimen/text_smaller_size" />
    </LinearLayout>
</LinearLayout>