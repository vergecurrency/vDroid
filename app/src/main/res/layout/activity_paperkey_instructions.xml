<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_welcome_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fl_welcome_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"
        android:contentDescription="@string/verge_bg_tag" />


    <TextView
        android:id="@+id/paper_key_title"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:paddingVertical="10dp"
        android:text="@string/paperkey_activity_title"
        android:textAlignment="center"
        android:textColor="?vg_backgroundBlue"
        android:textSize="@dimen/text_smaller_size"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/paper_key_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/paper_key_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:elevation="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_paperkey"
        android:tint="?vg_primaryLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/paper_key_logo"
        android:layout_marginTop="-56dp"
        android:background="?vg_backgroundGrey"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/paperkey_activity_main"
            android:textAlignment="center"
            android:textSize="@dimen/text_regular_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/paperkey_activity_sub"
            android:textAlignment="center" />




    </LinearLayout>
    <Button
        android:text="@string/paperkey_activity_button"
        android:id="@+id/paperkey_next_button"
        style="@style/blue_button"
         />

</RelativeLayout>